<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:context=".LanguageSettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:gravity="center"
        android:text="@string/choose_language"
        android:textColor="?attr/colorSecondary"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/lang_spinner"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:layout_marginStart="120sp"
        android:layout_marginTop="10sp"
        android:gravity="center" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="540sp"
        android:layout_marginEnd="20sp"
        android:background="?attr/colorTertiary"
        android:drawableEnd="@drawable/icon_arrow_right_triangle"
        android:drawableTint="?attr/colorSecondary"
        android:text="@string/next"
        android:textAlignment="textEnd"
        android:textColor="?attr/colorQuaternary" />


</LinearLayout>